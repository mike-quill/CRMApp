        <li><span>@Html.DisplayNameFor(model => model.City):</span> @Html.DisplayFor(model => model.City)</li>
        <li><span>@Html.DisplayNameFor(model => model.PostalCode):</span> @Html.DisplayFor(model => model.PostalCode)</li>
        <li><span>@Html.DisplayNameFor(model => model.CellPhone):</span> @Html.DisplayFor(model => model.CellPhoneNumber)</li>
        <li><span>@Html.DisplayNameFor(model => model.HomePhone):</span> @Html.DisplayFor(model => model.HomePhoneNumber)</li>
        <li><span>@Html.DisplayNameFor(model => model.Email):</span> @Html.DisplayFor(model => model.Email)</li>
