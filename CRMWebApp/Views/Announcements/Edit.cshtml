@model CRMWebApp.Models.Announcement
@using CRMWebApp.Utility;

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Announcement</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ID" />
            <div class="form-group">
                <label asp-for="Title" class="control-label"></label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Content" class="control-label"></label>
                <textarea rows="8" asp-for="Content" class="form-control"></textarea>
                <span asp-validation-for="Content" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PermissionLevel" class="control-label"></label>
                <select asp-for="PermissionLevel" class="form-control">
                    @foreach (KeyValuePair<int, string> entry in PermissionLevelHelper.PermissionLevelToRole)
                    {
                        <option value="@entry.Key">@entry.Value</option>
                    }
                </select>
                <span asp-validation-for="PermissionLevel" class="text-danger"></span>
            </div>
            @Html.HiddenFor(a => a.DateCreated)
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

