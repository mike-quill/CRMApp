<br />
<div class="card mb-sm-3" style="min-width: 18rem;">
	<h4 class="card-header" id="BillingTerms">Billing Terms</h4>
	<div class="card-body">
		@Html.DropDownList("BillingTermsID", null, htmlAttributes: new { @size = 20, @class = "form-control" })
	</div>
	<div class="card-footer">
		<a asp-controller="BillingTerms" asp-action="Create">Create</a> |
		<a asp-controller="BillingTerms" asp-action="Sort">Sort</a> |
		<a asp-controller="BillingTerms" asp-action="Edit" class="linkClick">Edit</a> |
		<a asp-controller="BillingTerms" asp-action="Delete" class="linkClick">Delete</a>
	</div>
</div>